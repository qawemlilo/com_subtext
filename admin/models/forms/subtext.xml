<?xml version="1.0" encoding="utf-8" ?>
<form>
	<fields>
		<fieldset name="base">
			<field name="subtext_id" type="hidden" filter="uint" />
			<field name="subtext_name" type="text" class="validate-string" fitler="string" required="true" size="64" label="COM_SUBTEXT_SUBTEXT_NAME_LABEL" description="COM_SUBTEXT_SUBTEXT_NAME_DESC" />
			<field name="subtext_alias" type="text" class="validate-cmd" filter="cmd" required="true" size="64" label="COM_SUBTEXT_SUBTEXT_ALIAS_LABEL" description="COM_SUBTEXT_SUBTEXT_ALIAS_DESC" />
		</fieldset>
		<fieldset name="editor">
			<field name="subtext_description" type="editor" filter="safehtml" label="COM_SUBTEXT_SUBTEXT_DESCRIPTION_LABEL" description="COM_SUBTEXT_SUBTEXT_DESCRIPTION_DESC" />
		</fieldset>
		<fieldset name="options">
			<field name="published" type="radio" filter="uint" class="radio btn-group validate-uint" required="true" default="1" label="COM_SUBTEXT_PUBLISHED_LABEL" description="COM_SUBTEXT_PUBLISHED_DESC">
				<option value="1">COM_SUBTEXT_BOOLEAN_TRUE</option>
				<option value="0">COM_SUBTEXT_BOOLEAN_FALSE</option>
			</field>
			<field name="access" type="accesslevel" filter="uint" class="validate-uint" required="true" default="1" label="COM_SUBTEXT_ACCESS_LABEL" description="COM_SUBTEXT_ACCESS_DESC" />
		</fieldset>
		<fieldset name="metadata">
			<field name="meta_description" type="textarea" class="validate-string" rows="5" cols="30" default="" label="COM_SUBTEXT_META_DESCRIPTION_LABEL" description="COM_SUBTEXT_META_DESCRIPTION_DESC" />
			<field name="meta_keywords" type="textarea" class="validate-string" rows="5" cols="30" default="" label="COM_SUBTEXT_META_KEYWORDS_LABEL" description="COM_SUBTEXT_META_KEYWORDS_DESC" />
		</fieldset>
	</fields>
	<fields name="params">
		<fieldset name="params">
			<field name="class_sfx" type="text" size="20" default="" label="COM_SUBTEXT_CLASS_SUFFIX_LABEL" description="COM_SUBTEXT_CLASS_SUFFIX_DESC" />
		</fieldset>
	</fields>
</form>
